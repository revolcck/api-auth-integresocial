    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.15",
    "@prisma/client": "^6.6.0",
    "argon2": "^0.41.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
